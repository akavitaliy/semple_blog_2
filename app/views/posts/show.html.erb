<article class="post">
  <section class="post-head">
    <h1><%= @post.title %></h1>
    <small>
      <time><%= @post.created_at.to_date.strftime("%d %B, %Y") %></time>       
      <%= link_to  'Изменить', edit_post_path(@post), class: 'badge bg-warning text-dark' %>      
      <%= link_to  'Удалить', post_path(@post), method: :delete, data: {confirm: 'Вы уверены?'}, class: 'badge bg-danger text-dark' %>
    </small>
  </section>

  <section class="post-summary">
    <%= image_tag @post.image.url(:large), class: 'img-show' if @post.image? %>
    <%= @post.body %>
  </section>    
</article>

<%= render 'disqus' %>