<article class="post">
  <section class="post-head">
    <h2><%= link_to post.title, post_path(post) %></h2>
    <small>
      <time><%= post.created_at.to_date.strftime("%d %B, %Y") %></time>       
      <%= link_to  'Изменить', edit_post_path(post), class: 'btn btn-warning btn-sm' %>      
      <%= link_to  'Удалить', post_path(post), method: :delete, data: {confirm: 'Вы уверены?'}, class: 'btn btn-danger btn-sm' %>
    </small>
  </section>

  <section class="post-summary">
    <%= post.summary %>
  </section>
    
</article>

         
